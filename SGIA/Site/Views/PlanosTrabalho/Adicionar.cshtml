@model PlanoTrabalho

@{
    ViewData["Title"] = "Planos de Trabalho - Adicionar";
}

@using (Html.BeginForm("Adicionar", "PlanosTrabalho", FormMethod.Post))
{
    <div class="card">
        <div class="header" style="background-color: #57a15f;">
            <h2 style="color: white;">@ViewData["Title"]</h2>
        </div>

        <div class="body">
            @Html.AntiForgeryToken()

            <div class="row">
                <div class="col-md-2">
                    @Html.LabelFor(a => a.DocenteId)
                    @Html.DropDownListFor(a => a.DocenteId, HelperLista.Editoras(), null, new { @class = "form-control", @autofocus = "autofocus" })
                    @Html.ValidationMessageFor(a => a.DocenteId)
                </div>

                <div class="col-md-2">
                    @Html.LabelFor(a => a.DiaSemana)
                    @Html.DropDownListFor(a => a.DiaSemana, HelperLista.Editoras(), null, new { @class = "form-control" })
                    @Html.ValidationMessageFor(a => a.DiaSemana)
                </div>

                <div class="col-md-4">
                    @Html.LabelFor(a => a.HoraInicio)
                    @Html.TextBoxFor(a => a.HoraInicio, "", new { @class = "form-control" })
                    @Html.ValidationMessageFor(a => a.HoraInicio)
                </div>

                <div class="col-md-2">
                    @Html.LabelFor(a => a.HoraEncerramento)
                    @Html.TextBoxFor(a => a.HoraEncerramento, "", new { @class = "form-control" })
                    @Html.ValidationMessageFor(a => a.HoraEncerramento)
                </div>

            </div>
        </div>

        <hr />

        <div class="footer">
            <div class="col-md-12">
                <button type="submit" class="btn btn-primary fa-pull-left">Gravar</button>
                <a href="/PlanosTrabalho/Index" class="btn btn-default fa-pull-right">Fechar</a>
            </div>
        </div>

        <br />
    </div>
}