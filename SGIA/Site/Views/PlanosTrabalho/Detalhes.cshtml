@model PlanoTrabalho

@{
    ViewData["Title"] = "Planos de Trabalho - Detalhes";
}

<div class="card">
    <div class="header">
        <h2>@ViewData["Title"]</h2>
    </div>

    <div class="body">
        <div class="row">
            <div class="col-md-6">
                @Html.LabelFor(a => a.DocenteId)
                @Html.DropDownListFor(a => a.DocenteId, HelperLista.Docentes(), null, new { @class = "form-control", @readonly = "readonly" })
            </div>

            <div class="col-md-3">
                @Html.LabelFor(a => a.DiaSemana)
                @Html.DropDownListFor(a => a.DiaSemana, HelperLista.DiaSemana(), null, new { @class = "form-control", @readonly = "readonly" })
            </div>

            <div class="col-md-3">
                @Html.LabelFor(a => a.HoraInicio)
                @Html.TextBoxFor(a => a.HoraInicio, "", new { @class = "form-control time", @readonly = "readonly" })
            </div>

            <div class="col-md-3">
                @Html.LabelFor(a => a.HoraEncerramento)
                @Html.TextBoxFor(a => a.HoraEncerramento, "", new { @class = "form-control time", @readonly = "readonly" })
            </div>

            <div class="col-md-3">
                @Html.LabelFor(a => a.StatusId)
                @Html.DropDownListFor(a => a.StatusId, HelperLista.Status(), null, new { @class = "form-control", @readonly = "readonly" })
            </div>

            <div class="col-md-3">
                @Html.LabelFor(a => a.DataCadastro)
                @Html.TextBoxFor(a => a.DataCadastro, "", new { @class = "form-control date", @readonly = "readonly" })
            </div>
        </div>

        <div class="row">
            <div class="col-md-6">
                @Html.LabelFor(a => a.DescricaoAtividade)
                @Html.TextAreaFor(a => a.DescricaoAtividade, 6, 30, new { @class = "form-control", @readonly = "readonly" })
            </div>
        </div>
    </div>

    <hr />

    <div class="footer-view">
        <div class="col-md-12">
            <a href="/PlanosTrabalho/Index" class="btn btn-default fa-pull-right">Fechar</a>
        </div>
    </div>
</div>
