@model Diciplina

@{
    ViewData["Title"] = "Diciplinas - Adicionar";
}

@using (Html.BeginForm("Adicionar", "Diciplinas", FormMethod.Post))
{
    <div class="card">
        <div class="header">
            <h2>@ViewData["Title"]</h2>
        </div>

        <div class="body">
            @Html.AntiForgeryToken()

            <div class="row">
                <div class="col-md-4">
                    @Html.LabelFor(a => a.Nome)
                    @Html.TextBoxFor(a => a.Nome, "", new { @class = "form-control", @autofocus = "autofocus" })
                    @Html.ValidationMessageFor(a => a.Nome)
                </div>

                <div class="col-md-2">
                    @Html.LabelFor(a => a.CargaHoraria)
                    @Html.TextBoxFor(a => a.CargaHoraria, "", new { @class = "form-control" })
                    @Html.ValidationMessageFor(a => a.CargaHoraria)
                </div>

                <div class="col-md-2">
                    @Html.LabelFor(a => a.HoraSemanal)
                    @Html.TextBoxFor(a => a.HoraSemanal, "", new { @class = "form-control" })
                    @Html.ValidationMessageFor(a => a.HoraSemanal)
                </div>

                <div class="col-md-2">
                    @Html.LabelFor(a => a.CreditoEnsino)
                    @Html.TextBoxFor(a => a.CreditoEnsino, "", new { @class = "form-control" })
                    @Html.ValidationMessageFor(a => a.CreditoEnsino)
                </div>

                <div class="col-md-2">
                    @Html.LabelFor(a => a.CreditoAtividadePratica)
                    @Html.TextBoxFor(a => a.CreditoAtividadePratica, "", new { @class = "form-control" })
                    @Html.ValidationMessageFor(a => a.CreditoAtividadePratica)
                </div>

                <div class="col-md-2">
                    @Html.LabelFor(a => a.CreditoAtividadeCampo)
                    @Html.TextBoxFor(a => a.CreditoAtividadeCampo, "", new { @class = "form-control" })
                    @Html.ValidationMessageFor(a => a.CreditoAtividadeCampo)
                </div>

            </div>

            <div class="row">
                <div class="col-md-6">
                    @Html.LabelFor(a => a.Ementa)
                    @Html.TextAreaFor(a => a.Ementa, 6, 30, new { @class = "form-control" })
                    @Html.ValidationMessageFor(a => a.Ementa)
                </div>
            </div>
        </div>

        <hr />

        <div class="footer-view">
            <div class="col-md-12">
                <button type="submit" class="btn btn-primary fa-pull-left">Gravar</button>
                <a href="/Diciplinas/Index" class="btn btn-default fa-pull-right">Fechar</a>
            </div>
        </div>
    </div>
}