@model HorarioAula

@{
    ViewData["Title"] = "HorarioAulas - Adicionar";
}

@using (Html.BeginForm("Adicionar", "HorarioAulas", FormMethod.Post))
{
    <div class="card">
        <div class="header" style="background-color: #57a15f;">
            <h2 style="color: white;">@ViewData["Title"]</h2>
        </div>

        <div class="body">
            @Html.AntiForgeryToken()

            <div class="row">
                <div class="col-md-2">
                    @Html.LabelFor(a => a.DiaSemana)
                    @Html.DropDownListFor(a => a.DiaSemana, HelperLista.DiaSemana(), null, new { @class = "form-control" })
                    @Html.ValidationMessageFor(a => a.DiaSemana)
                </div>

                <div class="col-md-2">
                    @Html.LabelFor(a => a.DiciplinaPrimeiroId)
                    @Html.DropDownListFor(a => a.DiciplinaPrimeiroId, HelperLista.DiaSemana(), null, new { @class = "form-control" })
                    @Html.ValidationMessageFor(a => a.DiciplinaPrimeiroId)
                </div>

                <div class="col-md-2">
                    @Html.LabelFor(a => a.DiciplinaSegundoId)
                    @Html.DropDownListFor(a => a.DiciplinaSegundoId, HelperLista.DiaSemana(), null, new { @class = "form-control" })
                    @Html.ValidationMessageFor(a => a.DiciplinaSegundoId)
                </div>

                <div class="col-md-2">
                    @Html.LabelFor(a => a.DiciplinaTerceiroId)
                    @Html.DropDownListFor(a => a.DiciplinaTerceiroId, HelperLista.DiaSemana(), null, new { @class = "form-control" })
                    @Html.ValidationMessageFor(a => a.DiciplinaTerceiroId)
                </div>

                <div class="col-md-2">
                    @Html.LabelFor(a => a.DiciplinaQuartoId)
                    @Html.DropDownListFor(a => a.DiciplinaQuartoId, HelperLista.DiaSemana(), null, new { @class = "form-control" })
                    @Html.ValidationMessageFor(a => a.DiciplinaQuartoId)
                </div>

                <div class="col-md-2">
                    @Html.LabelFor(a => a.TurmaId)
                    @Html.DropDownListFor(a => a.TurmaId, HelperLista.Turmas(), null, new { @class = "form-control" })
                    @Html.ValidationMessageFor(a => a.TurmaId)
                </div>

                <div class="col-md-2">
                    @Html.LabelFor(a => a.Periodo)
                    @Html.DropDownListFor(a => a.Periodo, HelperLista.Periodo(), null, new { @class = "form-control" })
                    @Html.ValidationMessageFor(a => a.Periodo)
                </div>
            </div>
        </div>

        <hr />

        <div class="footer">
            <div class="col-md-12">
                <button type="submit" class="btn btn-primary fa-pull-left">Gravar</button>
                <a href="/HorarioAulas/Index" class="btn btn-default fa-pull-right">Fechar</a>
            </div>
        </div>

        <br />
    </div>
}