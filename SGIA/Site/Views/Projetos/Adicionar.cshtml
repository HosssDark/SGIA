@model Projeto

@{
    ViewData["Title"] = "Projetos - Adicionar";
}

@using (Html.BeginForm("Adicionar", "Projetos", FormMethod.Post))
{
    <div class="card">
        <div class="header">
            <h2>@ViewData["Title"]</h2>
        </div>

        <div class="body">
            @Html.AntiForgeryToken()

            <div class="row">

                <div class="col-md-4">
                    @Html.LabelFor(a => a.Nome)
                    @Html.TextBoxFor(a => a.Nome, "", new { @class = "form-control", @autofocus = "autofocus" })
                    @Html.ValidationMessageFor(a => a.Nome)
                </div>

                <div class="col-md-2">
                    @Html.LabelFor(a => a.DocenteId)
                    @Html.DropDownListFor(a => a.DocenteId, HelperLista.Editoras(), null, new { @class = "form-control" })
                    @Html.ValidationMessageFor(a => a.DocenteId)
                </div>

                <div class="col-md-4">
                    @Html.LabelFor(a => a.CargaHoraria)
                    @Html.TextBoxFor(a => a.CargaHoraria, "", new { @class = "form-control" })
                    @Html.ValidationMessageFor(a => a.CargaHoraria)
                </div>

                <div class="col-md-2">
                    @Html.LabelFor(a => a.DataInicio)
                    @Html.TextBoxFor(a => a.DataInicio, "", new { @class = "form-control" })
                    @Html.ValidationMessageFor(a => a.DataInicio)
                </div>

                <div class="col-md-2">
                    @Html.LabelFor(a => a.DataTermino)
                    @Html.TextBoxFor(a => a.DataTermino, "", new { @class = "form-control" })
                    @Html.ValidationMessageFor(a => a.DataTermino)
                </div>

            </div>
        </div>

        <hr />

        <div class="footer-view">
            <div class="col-md-12">
                <button type="submit" class="btn btn-primary fa-pull-left">Gravar</button>
                <a href="/Projetos/Index" class="btn btn-default fa-pull-right">Fechar</a>
            </div>
        </div>
    </div>
}