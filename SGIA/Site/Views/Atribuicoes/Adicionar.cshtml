@model Atribuicao

@{
    ViewData["Title"] = "Atribuições - Adicionar";
}

@using (Html.BeginForm("Adicionar", "Atribuicoes", FormMethod.Post))
{
    <div class="card">
        <div class="header" style="background-color: #57a15f;">
            <h2 style="color: white;">@ViewData["Title"]</h2>
        </div>

        <div class="body">
            @Html.AntiForgeryToken()

            <div class="row">
                <div class="col-md-2">
                    @Html.LabelFor(a => a.DiciplinaId)
                    @Html.DropDownListFor(a => a.DiciplinaId, HelperLista.Editoras(), null, new { @class = "form-control" })
                    @Html.ValidationMessageFor(a => a.DiciplinaId)
                </div>

                <div class="col-md-2">
                    @Html.LabelFor(a => a.ProjetoId)
                    @Html.DropDownListFor(a => a.ProjetoId, HelperLista.Editoras(), null, new { @class = "form-control" })
                    @Html.ValidationMessageFor(a => a.ProjetoId)
                </div>

                <div class="col-md-2">
                    @Html.LabelFor(a => a.DocenteId)
                    @Html.DropDownListFor(a => a.DocenteId, HelperLista.Editoras(), null, new { @class = "form-control" })
                    @Html.ValidationMessageFor(a => a.DocenteId)
                </div>

            </div>
        </div>

        <hr />

        <div class="footer">
            <div class="col-md-12">
                <button type="submit" class="btn btn-primary fa-pull-left">Gravar</button>
                <a href="/Atribuicoes/Index" class="btn btn-default fa-pull-right">Fechar</a>
            </div>
        </div>

        <br />
    </div>
}