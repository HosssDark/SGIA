@model Dicente
@{
    ViewData["Title"] = "Dicentes - Adicionar";
}

@using (Html.BeginForm("Adicionar", "Dicentes", FormMethod.Post))
{
    <div class="card">
        <div class="header">
            <h2>@ViewData["Title"]</h2>
        </div>

        <div class="body">
            @Html.AntiForgeryToken()

            <div class="row">
                <div class="col-md-4">
                    @Html.LabelFor(a => a.Matricula)
                    @Html.TextBoxFor(a => a.Matricula, "", new { @class = "form-control", @autofocus = "autofocus" })
                    @Html.ValidationMessageFor(a => a.Matricula)
                </div>

                <div class="col-md-4">
                    @Html.LabelFor(a => a.Nome)
                    @Html.TextBoxFor(a => a.Nome, "", new { @class = "form-control" })
                    @Html.ValidationMessageFor(a => a.Nome)
                </div>

                <div class="col-md-4">
                    @Html.LabelFor(a => a.Telefone)
                    @Html.TextBoxFor(a => a.Telefone, "", new { @class = "form-control" })
                    @Html.ValidationMessageFor(a => a.Telefone)
                </div>

                <div class="col-md-4">
                    @Html.LabelFor(a => a.Celular)
                    @Html.TextBoxFor(a => a.Celular, "", new { @class = "form-control" })
                    @Html.ValidationMessageFor(a => a.Celular)
                </div>

                <div class="col-md-4">
                    @Html.LabelFor(a => a.Email)
                    @Html.TextBoxFor(a => a.Email, "", new { @class = "form-control" })
                    @Html.ValidationMessageFor(a => a.Email)
                </div>

            </div>
        </div>

        <hr />

        <div class="footer-view">
            <div class="col-md-12">
                <button type="submit" class="btn btn-primary fa-pull-left">Gravar</button>
                <a href="/Dicentes/Index" class="btn btn-default fa-pull-right">Fechar</a>
            </div>
        </div>
    </div>
}