@model Dicente

@{
    ViewData["Title"] = "Dicentes - Alterar";
}

@using (Html.BeginForm("Alterar", "Dicentes", FormMethod.Post))
{
    <div class="card">
        <div class="header" style="background-color: #57a15f;">
            <h2 style="color: white;">@ViewData["Title"]</h2>
        </div>

        <div class="body">
            @Html.AntiForgeryToken()
            @Html.HiddenFor(a => a.DicenteId)
            @Html.HiddenFor(a => a.DataCadastro)

            <div class="row">
                <div class="col-md-4">
                    @Html.LabelFor(a => a.Matricula)
                    @Html.TextBoxFor(a => a.Matricula, "", new { @class = "form-control", @autofocus = "autofocus" })
                    @Html.ValidationMessageFor(a => a.Matricula)
                </div>

                <div class="col-md-4">
                    @Html.LabelFor(a => a.Nome)
                    @Html.TextBoxFor(a => a.Nome, "", new { @class = "form-control" })
                    @Html.ValidationMessageFor(a => a.Nome)
                </div>

                <div class="col-md-4">
                    @Html.LabelFor(a => a.Telefone)
                    @Html.TextBoxFor(a => a.Telefone, "", new { @class = "form-control" })
                    @Html.ValidationMessageFor(a => a.Telefone)
                </div>

                <div class="col-md-4">
                    @Html.LabelFor(a => a.Celular)
                    @Html.TextBoxFor(a => a.Celular, "", new { @class = "form-control" })
                    @Html.ValidationMessageFor(a => a.Celular)
                </div>

                <div class="col-md-4">
                    @Html.LabelFor(a => a.Email)
                    @Html.TextBoxFor(a => a.Email, "", new { @class = "form-control" })
                    @Html.ValidationMessageFor(a => a.Email)
                </div>

                <div class="col-md-4">
                    @Html.LabelFor(a => a.StatusId)
                    @Html.DropDownListFor(a => a.StatusId, HelperLista.Status(), null, new { @class = "form-control" })
                    @Html.ValidationMessageFor(a => a.StatusId)
                </div>

                <div class="col-md-4">
                    @Html.LabelFor(a => a.DataCadastro)
                    @Html.TextBoxFor(a => a.DataCadastro, "", new { @class = "form-control", @readonly = "readonly" })
                </div>

            </div>
        </div>

        <hr />

        <div class="footer">
            <div class="col-md-12">
                <button type="submit" class="btn btn-primary fa-pull-left">Gravar</button>
                <a href="/Dicentes/Index" class="btn btn-default fa-pull-right">Fechar</a>
            </div>
        </div>

        <br />
    </div>
}