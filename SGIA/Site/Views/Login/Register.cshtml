@model Site.RegisterViewModel

@{
    Layout = "~/Views/Shared/_LayoutLogin.cshtml";
    ViewData["Title"] = "CRIAR NOVA CONTA";
}

<div class="auth_left">
    <div class="card">
        <div class="card-body">
            <div class="text-center">
                <a href="http://www.aia.unemat.br" target="_blank"><img src="~/images/logo_unemat.gif" /></a>
            </div>

            <div class="text-center">
                <label style="color:#00214a;">@ViewData["Title"]</label>
            </div>

            @using (Html.BeginForm("Register", "Login", FormMethod.Post))
            {
                @Html.AntiForgeryToken()
                @ViewData["Error"]

                <div class="form-group">
                    @Html.LabelFor(a => a.Name)
                    @Html.TextBoxFor(a => a.Name, "", new { @class = "form-control", @required = "required", @autofocus = "autofocus" })
                    @Html.ValidationMessageFor(a => a.Name)
                </div>

                <div class="form-group">
                    @Html.LabelFor(a => a.Email)
                    @Html.TextBoxFor(a => a.Email, "", new { @class = "form-control", @required = "required" })
                    @Html.ValidationMessageFor(a => a.Email)
                </div>

                <div class="form-group">
                    @Html.LabelFor(a => a.Password)
                    @Html.TextBoxFor(a => a.Password, "", new { @class = "form-control", @type = "password", @required = "required" })
                    @Html.ValidationMessageFor(a => a.Password)
                </div>

                <div class="form-group">
                    @Html.LabelFor(a => a.ConfirmPassword)
                    @Html.TextBoxFor(a => a.ConfirmPassword, "", new { @class = "form-control", @type = "password", @required = "required" })
                    @Html.ValidationMessageFor(a => a.ConfirmPassword)
                </div>

                <div class="text-center">
                    <button type="submit" class="btn btn-primary btn-block">Criar nova conta</button>
                    <div class="text-muted mt-4">Já tem uma conta? <a href="@Url.Action("Index","Login")"> Acessar?</a></div>
                </div>
            }

        </div>
    </div>
</div>
