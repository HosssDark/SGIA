@model Site.LoginViewModel

@{
    Layout = "~/Views/Shared/_LayoutLogin.cshtml";
    ViewData["Title"] = "Você possui conta uma conta?";
}

<div class="auth_left">
    <div class="card">
        <div class="card-body">
            <div class="text-center">
                <a href="http://www.aia.unemat.br" target="_blank"><img src="~/images/logo_unemat.gif" /></a>
            </div>

            <div class="text-center">
                <label style="color:#00214a;">@ViewData["Title"]</label>
            </div>

            @using (Html.BeginForm("Login", "Login", FormMethod.Post))
            {
                @Html.AntiForgeryToken()

                <div class="text-left">
                    <label style="color:red;">@ViewData["Error"]</label>
                    <label>@ViewData["Success"]</label>
                </div>

                <div class="form-group">
                    @Html.LabelFor(a => a.Email)
                    @Html.TextBoxFor(a => a.Email, "", new { @class = "form-control", @required = "required", @autofocus = "autofocus" })
                    @Html.ValidationMessageFor(a => a.Email)
                </div>
                <div class="form-group">
                    <label class="form-label"><a href="@Url.Action("ToRecover","Login")" class="float-right small">Esqueceu o seu usuário ou senha?</a></label>
                    @Html.Label("Senha")
                    @Html.TextBoxFor(a => a.Password, "", new { @class = "form-control", @type = "password", @required = "required" })
                    @Html.ValidationMessageFor(a => a.Password)
                </div>

                <div class="text-center">
                    <button type="submit" class="btn btn-primary btn-block" title="">Acessar</button>
                    <div class="text-muted mt-4">@ViewData["Title"]<a href="@Url.Action("Register","Login")"> Inscrever-se</a></div>
                </div>
            }
        </div>
    </div>
</div>