@model Site.ToRecoverViewModel

@{
    Layout = "~/Views/Shared/_LayoutLogin.cshtml";
    ViewData["Title"] = "Recuperar Senha";
}

<div class="auth option2">
    <div class="auth_left">
        <div class="card">
            <div class="card-body">
                <div class="text-center">
                    <a class="header-brand" href="index.html"><i class="fa fa-graduation-cap brand-logo"></i></a>
                    <div class="card-title">ESQUECEU A SENHA</div>
                </div>
                <p class="text-muted">Digite seu endereço de e-mail e será enviado e-mail para você redefinir uma nova senha.</p>

                @using (Html.BeginForm("RecuperarSenha", "Login", FormMethod.Post))
                {
                    @Html.AntiForgeryToken()
                    @ViewData["Error"]

                    <div class="form-group">
                        @Html.LabelFor(a => a.Email)
                        @Html.TextBoxFor(a => a.Email, "", new { @class = "form-control", @required = "required", @autofocus = "autofocus" })
                        @Html.ValidationMessageFor(a => a.Email)
                    </div>

                    <div class="text-center">
                        <button type="submit" class="btn btn-primary btn-block">Enviar email</button>
                        <div class="text-muted mt-4">Forget it, <a href="@Url.Action("Index","Login")">Volta à tela de login.</a></div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>