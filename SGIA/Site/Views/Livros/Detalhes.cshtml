@model Domain.Livro

@{
    ViewData["Title"] = "Livros - Detalhes";
}

<div class="tab-pane active">
    <div class="card">
        <div class="card-header">
            <h3 class="card-title">@ViewData["Title"]</h3>
        </div>

        <div class="card-body">

            <div class="row">
                <div class="col-md-4">
                    @Html.LabelFor(a => a.Titulo)
                    @Html.TextBoxFor(a => a.Titulo, "", new { @class = "form-control", @readonly = "readonly" })
                </div>

                <div class="col-md-4">
                    @Html.LabelFor(a => a.Autor)
                    @Html.TextBoxFor(a => a.Autor, "", new { @class = "form-control", @readonly = "readonly" })
                </div>

                <div class="col-md-2">
                    @Html.LabelFor(a => a.EditoraId)
                    @Html.DropDownListFor(a => a.EditoraId, HelperLista.Editoras(), null, new { @class = "form-control", @disabled = "disabled" })
                </div>

                <div class="col-md-2">
                    @Html.LabelFor(a => a.DataPublicacao)
                    @Html.TextBoxFor(a => a.DataPublicacao, "", new { @class = "form-control date", @readonly = "readonly" })
                </div>

                <div class="col-md-2">
                    @Html.LabelFor(a => a.DataCadastro)
                    @Html.TextBoxFor(a => a.DataCadastro, "", new { @class = "form-control date", @readonly = "readonly" })
                </div>

                <div class="col-md-2">
                    @Html.LabelFor(a => a.StatusId)
                    @Html.DropDownListFor(a => a.StatusId, HelperLista.Status(), null, new { @class = "form-control", @disabled = "disabled" })
                </div>

                <div class="col-md-6">
                    @Html.LabelFor(a => a.AreaConhecimento)
                    @Html.TextAreaFor(a => a.AreaConhecimento, 6, 30, new { @class = "form-control", @readonly = "readonly" })
                </div>
            </div>

            <br />

            <div class="footer-view">
                <div class="col-md-12">
                    <button type="submit" class="btn btn-primary fa-pull-left">Gravar</button>
                    <a href="@Url.Action("Index", "Livros")" class="btn btn-default fa-pull-right">Fechar</a>
                </div>
            </div>
        </div>
    </div>
</div>