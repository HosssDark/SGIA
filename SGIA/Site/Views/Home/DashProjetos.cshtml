<div class="card">
    <div class="card-header">
        <h3 class="card-title">@ViewData["Title"]</h3>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-striped mb-0 text-nowrap">
                <thead>
                    <tr>
                        <th>Descrição</th>
                        <th>Docente Resp.</th>
                        <th>Status</th>
                        <th>Carga Hor.</th>
                        <th>Inicio</th>
                        <th>Término</th>
                        <th>Progresso</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.OrderBy(a => a.ProjetoId))
                    {
                        <tr>
                            <td>@item.Descricao</td>
                            <td>@item.Docente</td>
                            <td><button class="btn btn-primary">@item.Status</button></td>
                            <td>@string.Format("{0} Hrs", item.CargaHoraria.ToString())</td>
                            <td>@item.DataInicio.ToString("dd/MM/yyyy")</td>
                            <td>@item.DataTermino.ToString("dd/MM/yyyy")</td>
                            <td>
                                <div class="progress">
                                    <div class="progress-bar bg-green" role="progressbar" aria-valuenow="62" aria-valuemin="0" aria-valuemax="100" style="width: @item.Progresso%"></div>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>