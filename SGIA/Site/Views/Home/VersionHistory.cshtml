@model List<Domain.Historico>

@{
    ViewData["Title"] = "Histórico de Versão";
}

<div class="card">
    <div class="header">
        <h2>@ViewData["Title"]</h2>
    </div>
    <div class="body">

        <div class="row">
            <div class="col-md-12">
                <div class="row clearfix">
                    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                        @foreach (var item in Model)
                        {
                            <div class="card">
                                <div class="header" style="background-color: #57a15f !important;">
                                    <h2>@item.Versao</h2>
                                    @item.Data
                                </div>
                                <div class="body">
                                    @foreach (var Desc in item.Descricao)
                                    {
                                        <p>@Desc</p>
                                    }
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>

        <hr />

        <div class="footer-view">
            <div class="col-md-12">
                <a href="/Home" class="btn btn-default pull-right">Fechar</a>
            </div>
        </div>
    </div>
</div>