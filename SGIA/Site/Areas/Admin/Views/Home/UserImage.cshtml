@model Domain.User

@{
    Layout = null;

    string Image = ViewBag.Image != null ? ViewBag.Image : "/images/sem-imagem-avatar.png";
}

<div class="dropdown d-flex">
    <a href="javascript:void(0)" class="chip ml-3" data-toggle="dropdown">
       <span class="avatar" style="background-image: url('@Image')"></span> @Model.Nome
    </a>

    <div class="dropdown-menu dropdown-menu-right dropdown-menu-arrow">
        <a class="dropdown-item" href="@Url.Action("Index", "Profile")"><i class="fas fa-user"></i> Perfil</a>
        <a class="dropdown-item" href="#"><span class="float-right"><span class="badge badge-primary">6</span></span><i class="fas fa-envelope"></i> Notificação</a>
        <div class="dropdown-divider"></div>
        <a class="dropdown-item" href="@Url.Action("Exit", "Login")"><i class="fas fa-power-off"></i> Sair</a>
    </div>
</div>