@model Domain.User

@{
    Layout = null;
}

<div class="dropdown d-flex">
    <a href="javascript:void(0)" class="chip ml-3" data-toggle="dropdown">
        <span class="avatar" style="background-image: url('@Url.Action("ToSeeImagem","Profile", new { Id = Model.UserId })')"></span> @Model.Nome
    </a>
    <div class="dropdown-menu dropdown-menu-right dropdown-menu-arrow">
        <a class="dropdown-item" href="@Url.Action("Index", "Profile")"><i class="fas fa-user"></i> Profile</a>
        <a class="dropdown-item" href="@Url.Action("Index", "Setting")"><i class="fas fa-cog"></i> Settings</a>
        <a class="dropdown-item" href="@Url.Action("Index", "Notification")"><span class="float-right"><span class="badge badge-primary">6</span></span><i class="fas fa-envelope"></i> Notificação</a>
        <div class="dropdown-divider"></div>
        <a class="dropdown-item" href="@Url.Action("Index", "Login")"><i class="fas fa-power-off"></i> Sair</a>
    </div>
</div>