@model List<Site.ProjetoViewModel>

@{
    ViewData["Title"] = "Projetos";
}

<div class="tab-pane active">
    <div class="card">
        <div class="card-header">
            <h3 class="card-title">@ViewData["Title"]</h3>
        </div>

        <div class="card-body">
            <div class="row">
                <div class="col-md-10">
                    <div class="row">
                        <div class="col-lg-4 col-md-4 col-sm-4">
                            @Html.Label("lblNome", "Nome")
                            @Html.TextBox("Nome", "", new { @class = "form-control", @autofocus = "autofocus" })
                        </div>

                        <div class="col-lg-4 col-md-4 col-sm-4">
                            @Html.Label("lblDocente", "Docente")
                            @Html.TextBox("Docente", "", new { @class = "form-control" })
                        </div>
                    </div>
                </div>

                <div class="col-md-2">
                    <div class="row">
                        <div class="col-lg-12 col-md-12 col-sm-6 bottom-margem">
                            <a href="@Url.Action("Adicionar", "Projetos")" class="btn btn-sm btn-primary btn-block" title="">Adicionar</a>
                        </div>
                    </div>
                </div>
            </div>

            <br />

            <div class="row">
                <div class="table-responsive">
                    <table class="table table-hover js-basic-example dataTable table-striped table_custom border-style spacing5">
                        <thead>
                            <tr>
                                <th>Nome</th>
                                <th>Docente</th>
                                <th>Carga Hor.</th>
                                <th>Status</th>
                                <th>Inicio</th>
                                <th>Término</th>
                                <th style="text-align: center;">Opções</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.OrderBy(a => a.ProjetoId))
                            {
                                <tr>
                                    <td style="vertical-align: middle !important;">@item.Nome</td>
                                    <td style="vertical-align: middle !important;">@item.Docente</td>
                                    <td style="vertical-align: middle !important;">@item.CargaHoraria</td>
                                    <td style="vertical-align: middle !important;">@item.Status</td>
                                    <td style="vertical-align: middle !important;">@item.DataInicio.ToString("dd/MM/yyyy")</td>
                                    <td style="vertical-align: middle !important;">@item.DataTermino.ToString("dd/MM/yyyy")</td>

                                    <td style="text-align: center;">
                                        <a href="@Url.Action("Adicionar", "Projetos", new { Id = item.ProjetoId })"
                                           class="btn btn-icon btn-sm js-sweetalert"
                                           title="Alterar">
                                            <i class="fas fa-edit text-primary"></i>
                                        </a>

                                        <a href="#"
                                           class="btn btn-icon btn-sm js-sweetalert Excluir"
                                           title="Excluir"
                                           data-id="@item.ProjetoId"
                                           data-url="/Projetos/Excluir?Id=">
                                            <i class="fas fa-trash-alt text-danger"></i>
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>

            <div class="row clearfix margin-top-40">
                <div class="col-md-12">
                    <a href="@Url.Action("Index", "Home")" class="btn btn-default fa-pull-right">Fechar</a>
                </div>
            </div>
        </div>
    </div>
</div>