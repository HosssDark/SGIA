@model DicenteViewModel

@{
    ViewData["Title"] = "Dicentes - Alterar";
}

@section scripts{
    <script src="~/js/change_image.js"></script>
}

<div class="tab-pane active">
    <div class="card">
        <div class="card-header">
            <h3 class="card-title">@ViewData["Title"]</h3>
        </div>

        @using (Html.BeginForm("Alterar", "Dicentes", FormMethod.Post, new { enctype = "multipart/form-data" }))
        {

            <div class="card-body">
                @Html.AntiForgeryToken()
                @Html.HiddenFor(a => a.Dicente.DicenteId)

                <div class="row">
                    <div class="col-md-2">
                        @Html.LabelFor(a => a.Dicente.Matricula)
                        @Html.TextBoxFor(a => a.Dicente.Matricula, "", new { @class = "form-control", @autofocus = "autofocus" })
                        @Html.ValidationMessage("Matricula")
                    </div>

                    <div class="col-md-4">
                        @Html.LabelFor(a => a.Dicente.Nome)
                        @Html.TextBoxFor(a => a.Dicente.Nome, "", new { @class = "form-control" })
                        @Html.ValidationMessageFor(a => a.Dicente.Nome)
                    </div>

                    <div class="col-md-4">
                        @Html.LabelFor(a => a.Dicente.Email)
                        @Html.TextBoxFor(a => a.Dicente.Email, "", new { @class = "form-control" })
                        @Html.ValidationMessage("Email")
                    </div>

                    <div class="col-md-2">
                        @Html.LabelFor(a => a.Dicente.Telefone)
                        @Html.TextBoxFor(a => a.Dicente.Telefone, "", new { @class = "form-control celular" })
                        @Html.ValidationMessageFor(a => a.Dicente.Telefone)
                    </div>

                    <div class="col-md-2">
                        @Html.LabelFor(a => a.Dicente.Celular)
                        @Html.TextBoxFor(a => a.Dicente.Celular, "", new { @class = "form-control celular" })
                        @Html.ValidationMessageFor(a => a.Dicente.Celular)
                    </div>

                    <div class="col-md-2">
                        @Html.LabelFor(a => a.Dicente.StatusId)
                        @Html.DropDownListFor(a => a.Dicente.StatusId, HelperLista.Status(), null, new { @class = "form-control" })
                        @Html.ValidationMessageFor(a => a.Dicente.StatusId)
                    </div>

                    <div class="col-md-2">
                        @Html.LabelFor(a => a.Dicente.DataCadastro)
                        @Html.TextBoxFor(a => a.Dicente.DataCadastro, "{0:dd/MM/yyyy}", new { @class = "form-control date", @readonly = "readonly" })
                    </div>
                </div>

                <div class="row clearfix margin-top-40">

                    <div class="col-sm-2">
                        <img id=preview width="100" height="100" src="@Model.Image">
                    </div>

                    <div class="col-md-5">
                        <label asp-for="File"></label>
                        <input asp-for="File" class="form-control" />
                        <span asp-validation-for="File" class="text-danger"></span>
                    </div>
                </div>

                <div class="row clearfix margin-top-40">
                    <div class="col-md-12">
                        <button type="submit" class="btn btn-primary fa-pull-left">Gravar</button>
                        <a href="@Url.Action("Index", "Dicentes")" class="btn btn-default fa-pull-right">Fechar</a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>