@model IEnumerable<Repository.Repository.ViewModel.PlanoEnsinoViewModel>

@{
    Layout = null;
}

<div class="tab-pane active" id="Courses-all">
    <div class="row row-deck">
        @foreach (var PlanoEnsino in Model)
        {
            <div class="col-xl-3 col-lg-3 col-md-3">
                <div class="card">
                    <a href="#"><img class="card-img-top" src="@PlanoEnsino.Image" alt=""></a>
                    <div class="card-body d-flex flex-column">
                        <h5>@PlanoEnsino.Docente</h5>
                    </div>
                    <div class="table-responsive">
                        <table class="table table-striped table-vcenter mb-0">
                            <tbody>
                                <tr>
                                    <td class="w20"><i class="fa fa-calendar"></i></td>
                                    <td class="tx-medium">Data de Cadastro</td>
                                    <td class="text-right">@PlanoEnsino.DataCadastro.ToString("dd/MM/yyyy")</td>
                                </tr>
                                <tr>
                                    <td><i class="fa fa-calendar"></i></td>
                                    <td class="tx-medium">Status</td>
                                    <td class="text-right">@PlanoEnsino.Status</td>
                                </tr>
                            </tbody>
                        </table>
                    </div>

                    <div class="card-footer">
                        <a href="@Url.Action("Detalhes", "PlanosEnsino", new { Id = PlanoEnsino.PlanoEnsinoId })" class="btn btn-primary btn-sm">Detalhes </a>
                        <a href="@Url.Action("Alterar", "PlanosEnsino", new { Id = PlanoEnsino.PlanoEnsinoId })" class="btn btn-primary btn-sm">Alterar</a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>