@model IEnumerable<Repository.Repository.ViewModel.EditoraViewModel>

@{
    Layout = null;
}

<div class="tab-pane active" id="Courses-all">
    <div class="row row-deck">
        @foreach (var Editora in Model)
        {
            <div class="col-xl-4 col-lg-4 col-md-6">
                <div class="card">
                    <a href="#"><img class="card-img-top" src="@Editora.Image" height="200px" alt=""></a>
                    <div class="card-body d-flex flex-column">
                        <h5><a href="courses-details.html">@Editora.Nome</a></h5>
                    </div>
                    <div class="table-responsive">
                        <table class="table table-striped table-vcenter mb-0">
                            <tbody>
                                <tr>
                                    <td class="w20"><i class="fa fa-calendar"></i></td>
                                    <td class="tx-medium">Data de Cadastro</td>
                                    <td class="text-right">@Editora.DataCadastro.ToString("dd/MM/yyyy")</td>
                                </tr>
                                <tr>
                                    <td><i class="fa fa-calendar"></i></td>
                                    <td class="tx-medium">Status</td>
                                    <td class="text-right">@Editora.Status</td>
                                </tr>
                            </tbody>
                        </table>
                    </div>

                    <div class="card-footer">
                        <div class="d-flex align-items-center mt-auto">
                            <a href="@Url.Action("Alterar", "Editoras", new { Id = Editora.EditoraId })" class="btn btn-primary btn-sm">Alterar</a>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>