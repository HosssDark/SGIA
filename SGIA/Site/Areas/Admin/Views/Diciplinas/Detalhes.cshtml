@model Domain.Diciplina

@{
    ViewData["Title"] = "Diciplinas - Detalhes";
}

<div class="tab-pane active">
    <div class="card">
        <div class="card-header">
            <h3 class="card-title">@ViewData["Title"]</h3>
        </div>

        <div class="card-body">
            <div class="row clearfix">
                <div class="col-md-6">
                    @Html.LabelFor(a => a.Nome)
                    @Html.TextBoxFor(a => a.Nome, "", new { @class = "form-control", @readonly = "readonly" })
                </div>

                <div class="col-md-3">
                    @Html.LabelFor(a => a.CargaHoraria)
                    @Html.TextBoxFor(a => a.CargaHoraria, "", new { @class = "form-control", @readonly = "readonly" })
                </div>

                <div class="col-md-3">
                    @Html.LabelFor(a => a.HoraSemanal)
                    @Html.TextBoxFor(a => a.HoraSemanal, "", new { @class = "form-control", @readonly = "readonly" })
                </div>

                <div class="col-md-3">
                    @Html.LabelFor(a => a.CreditoEnsino)
                    @Html.TextBoxFor(a => a.CreditoEnsino, "", new { @class = "form-control", @readonly = "readonly" })
                    @Html.ValidationMessageFor(a => a.CreditoEnsino)
                </div>

                <div class="col-md-3">
                    @Html.LabelFor(a => a.CreditoAtividadePratica)
                    @Html.TextBoxFor(a => a.CreditoAtividadePratica, "", new { @class = "form-control", @readonly = "readonly" })
                </div>

                <div class="col-md-3">
                    @Html.LabelFor(a => a.CreditoAtividadeCampo)
                    @Html.TextBoxFor(a => a.CreditoAtividadeCampo, "", new { @class = "form-control", @readonly = "readonly" })
                </div>

                <div class="col-md-3">
                    @Html.LabelFor(a => a.StatusId)
                    @Html.DropDownListFor(a => a.StatusId, HelperLista.Status(), null, new { @class = "form-control", @readonly = "readonly" })
                </div>

                <div class="col-md-3">
                    @Html.LabelFor(a => a.DataCadastro)
                    @Html.TextBoxFor(a => a.DataCadastro, "{0:dd/MM/yyyy}", new { @class = "form-control date", @readonly = "readonly" })
                </div>
            </div>

            <div class="row clearfix">
                <div class="col-md-6">
                    @Html.LabelFor(a => a.Ementa)
                    @Html.TextAreaFor(a => a.Ementa, 6, 30, new { @class = "form-control", @readonly = "readonly" })
                </div>
            </div>

            <div class="row clearfix">
                <div class="col-md-12">
                    <a href="@Url.Action("Index", "Diciplinas")" class="btn btn-default fa-pull-right">Fechar</a>
                </div>
            </div>
        </div>
    </div>
</div>