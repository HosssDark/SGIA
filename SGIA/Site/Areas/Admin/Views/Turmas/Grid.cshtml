@model IEnumerable<Repository.Repository.ViewModel.TurmaViewModel>

@{
    Layout = null;
}

<div class="tab-pane active" id="Courses-all">
    <div class="row row-deck">
        @foreach (var Turma in Model)
        {
            <div class="col-xl-3 col-lg-3 col-md-3">
                <div class="card">
                    <a href="#"><img class="card-img-top" src="@Turma.Image" alt=""></a>
                    <div class="card-body d-flex flex-column">
                        <h5><a href="courses-details.html">@Turma.Name</a></h5>
                        <div class="text-muted">@Turma.Descricao</div>
                    </div>
                    <div class="table-responsive">
                        <table class="table table-striped table-vcenter mb-0">
                            <tbody>
                                <tr>
                                    <td class="w20"><i class="fa fa-calendar"></i></td>
                                    <td class="tx-medium">Data de Cadastro</td>
                                    <td class="text-right">@Turma.DataCadastro.ToString("dd/MM/yyyy")</td>
                                </tr>
                                <tr>
                                    <td><i class="fab fa-black-tie"></i></td>
                                    <td class="tx-medium">Coordenador</td>
                                    <td class="text-right">@Turma.Coordenador.Nome</td>
                                </tr>
                                <tr>
                                    <td><i class="fas fa-sort-amount-up-alt"></i></td>
                                    <td class="tx-medium">Quantidade de Semestres</td>
                                    <td class="text-right">@Turma.QtdeSemestres</td>
                                </tr>
                                <tr>
                                    <td><i class="fas fa-users"></i></td>
                                    <td class="tx-medium">Quantidade de Dicentes</td>
                                    <td class="text-right">@Turma.QtdeEstudantes</td>
                                </tr>
                                <tr>
                                    <td><i class="fa fa-calendar"></i></td>
                                    <td class="tx-medium">Status</td>
                                    <td class="text-right">@Turma.Status</td>
                                </tr>
                            </tbody>
                        </table>
                    </div>

                    <div class="card-footer">
                        <div class="d-flex align-items-center mt-auto">
                            <a href="@Url.Action("Alterar", "Turmas", new { Id = Turma.TurmaId })" class="btn btn-primary btn-sm">Alterar</a>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>