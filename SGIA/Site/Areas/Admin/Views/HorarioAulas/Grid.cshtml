@model IEnumerable<Repository.Repository.ViewModel.HorarioAulaViewModel>

@{
    Layout = null;
}

<div class="tab-pane active" id="Courses-all">
    <div class="row row-deck">
        @foreach (var Horario in Model)
        {
            <div class="col-xl-3 col-lg-3 col-md-3">
                <div class="card">
                    <a href="#"><img class="card-img-top" src="@Horario.Image" height="200px" alt=""></a>
                    <div class="card-body d-flex flex-column">
                        <h5><a href="courses-details.html"></a></h5>
                        <div class="text-muted"></div>
                    </div>
                    <div class="table-responsive">
                        <table class="table table-striped table-vcenter mb-0">
                            <tbody>
                                <tr>
                                    <td class="w20"><i class="fas fa-users"></i></td>
                                    <td class="tx-medium">Turma</td>
                                    <td class="text-right">@Horario.Turma</td>
                                </tr>
                                <tr>
                                    <td><i class="fa fa-clock"></i></td>
                                    <td class="tx-medium">Diciplina Primeiro Horário</td>
                                    <td class="text-right">@Horario.DiciplinaPrimeiro</td>
                                </tr>
                                <tr>
                                    <td><i class="fa fa-clock"></i></td>
                                    <td class="tx-medium">Diciplina Segundo Horário</td>
                                    <td class="text-right">@Horario.DiciplinaSegundo</td>
                                </tr>
                                <tr>
                                    <td><i class="fa fa-clock"></i></td>
                                    <td class="tx-medium">Diciplina Terceiro Horário</td>
                                    <td class="text-right">@Horario.DiciplinaTerceiro</td>
                                </tr>
                                <tr>
                                    <td><i class="fa fa-clock"></i></td>
                                    <td class="tx-medium">Diciplina Quarto Horário</td>
                                    <td class="text-right">@Horario.DiciplinaQuarto</td>
                                </tr>
                                <tr>
                                    <td><i class="@Horario.StatusIcon"></i></td>
                                    <td class="tx-medium">Status</td>
                                    <td class="text-right">@Horario.Status</td>
                                </tr>
                            </tbody>
                        </table>
                    </div>

                    <div class="card-footer">
                        <div class="d-flex align-items-center mt-auto">
                            <a href="@Url.Action("Alterar", "HorarioAulas", new { Id = Horario.HorarioAulaId })" class="btn btn-primary btn-sm">Alterar</a>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>