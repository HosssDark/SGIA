@model IEnumerable<Repository.Repository.ViewModel.UserGridViewModel>

@{
    Layout = null;
}

<div class="row">
    @foreach (var User in Model.OrderBy(a => a.Nome))
    {
        <div class="col-xl-3 col-lg-3 col-md-3">
            <div class="card">
                <div class="card-body text-center">
                    <img class="card-profile-img" src="@User.Image" alt="">
                    <h5 class="mb-0">@User.Nome</h5>
                    <span>Computer</span>
                    <div class="text-muted">@User.Email</div>
                    <p class="mb-4 mt-3">@User.Status</p>
                    <p class="mb-4 mt-3">@User.DataCadastro.ToString("dd/MM/yyyy")</p>
                    <a href="@Url.Action("Detalhes", "User", new { Id = User.UserId })" class="btn btn-primary btn-sm">Detalhes</a>
                    <a href="@Url.Action("Alterar", "User", new { Id = User.UserId })" class="btn btn-primary btn-sm">Alterar</a>
                </div>
            </div>
        </div>
    }
</div>