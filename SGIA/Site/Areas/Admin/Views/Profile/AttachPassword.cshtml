@model ChangePasswordViewModel

@{
    Layout = null;
}

@using (Html.BeginForm("AttachPassword", "Profile", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(a => a.UserId)

    <div class="row clearfix">
        <div class="col-md-12">
            @Html.LabelFor(a => a.Email)
            @Html.TextBoxFor(a => a.Email, "", new { @class = "form-control", @readonly = "readonly" })
            @Html.ValidationMessageFor(a => a.Email)
        </div>

        <div class="col-md-6">
            @Html.LabelFor(a => a.Password)
            @Html.TextBoxFor(a => a.Password, "", new { @class = "form-control", @type = "password", @required = "required" })
            @Html.ValidationMessageFor(a => a.Password)
        </div>

        <div class="col-md-6">
            @Html.LabelFor(a => a.ConfirmPassword)
            @Html.TextBoxFor(a => a.ConfirmPassword, "", new { @class = "form-control", @type = "password", @required = "required" })
            @Html.ValidationMessageFor(a => a.ConfirmPassword)
        </div>
    </div>

    <div class="row clearfix margin-top-40">
        <div class="col-sm-12">
            <button type="submit" class="btn btn-primary">Gravar</button>
        </div>
    </div>
}