@model List<Site.LivroViewModel>

@{
    ViewData["Title"] = "Livros";
}

<div class="tab-pane active">
    <div class="card">
        <div class="card-header">
            <h3 class="card-title">@ViewData["Title"]</h3>
        </div>

        <div class="card-body">
            <div class="row clearfix">
                <div class="col-md-10">
                    <div class="row">
                        <div class="col-lg-4 col-md-4 col-sm-4">
                            @Html.Label("lblTitulo", "Título")
                            @Html.TextBox("Titulo", "", new { @class = "form-control", @autofocus = "autofocus" })
                        </div>

                        <div class="col-lg-4 col-md-4 col-sm-4">
                            @Html.Label("lbldAutor", "Autor")
                            @Html.TextBox("Autor", "", new { @class = "form-control" })
                        </div>

                        <div class="col-lg-4 col-md-4 col-sm-4">
                            @Html.Label("lbldAutor", "Status")
                            @Html.TextBox("Autor", "", new { @class = "form-control" })
                        </div>
                    </div>
                </div>

                <div class="col-md-2">
                    <div class="row">
                        <div class="col-lg-12 col-md-12 col-sm-6 bottom-margem">
                            <a href="@Url.Action("Adicionar", "Livros")" class="btn btn-sm btn-primary btn-block" title="">Adicionar</a>
                        </div>
                    </div>
                </div>
            </div>

            <div class="row clearfix margin-top-40">
                <div class="table-responsive">
                    <table class="table table-hover js-basic-example dataTable table-striped table_custom border-style spacing5">
                        <thead>
                            <tr>
                                <th>Título</th>
                                <th>Autor</th>
                                <th>Status</th>
                                <th>Publicação</th>
                                <th style="text-align: center;">Opções</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.OrderBy(a => a.LivroId))
                            {
                                <tr>
                                    <td style="vertical-align: middle !important;">@item.Titulo</td>
                                    <td style="vertical-align: middle !important;">@item.Autor</td>
                                    <td style="vertical-align: middle !important;">@item.Status</td>
                                    <td style="vertical-align: middle !important;">@item.DataPublicacao.ToString("dd/MM/yyyy")</td>
                                    <td style="text-align: center;">

                                        <a href="@Url.Action("Detalhes", "Livros", new { Id = item.LivroId })"
                                           class="btn btn-icon btn-sm js-sweetalert"
                                           title="Detalhes">
                                            <i class="fas fa-search text-primary"></i>
                                        </a>
                                        
                                        <a href="@Url.Action("Alterar", "Livros", new { Id = item.LivroId })"
                                           class="btn btn-icon btn-sm js-sweetalert"
                                           title="Alterar">
                                            <i class="fas fa-edit text-primary"></i>
                                        </a>

                                        <a href="#" class="btn btn-icon btn-sm js-sweetalert Excluir"
                                           data-id="@item.LivroId"
                                           title="Excluir"
                                           data-url="/Livros/Excluir?Id=@item.LivroId">
                                            <i class="fas fa-trash-alt text-danger"></i>
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>

            <div class="row clearfix margin-top-40">
                <div class="col-md-12">
                    <a href="@Url.Action("Index", "Home")" class="btn btn-default fa-pull-right">Fechar</a>
                </div>
            </div>
        </div>
    </div>
</div>