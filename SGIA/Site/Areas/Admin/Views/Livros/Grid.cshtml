@model IEnumerable<Repository.Repository.ViewModel.LivroViewModel>

@{
    Layout = null;
}

<div class="tab-pane active" id="Courses-all">
    <div class="row row-deck">
        @foreach (var Livro in Model)
        {
            <div class="col-xl-4 col-lg-4 col-md-6">
                <div class="card">
                    <a href="#"><img class="card-img-top" src="~/images/gallery/1.jpg" alt=""></a>
                    <div class="card-body d-flex flex-column">
                        <h5><a href="courses-details.html">@Livro.Titulo</a></h5>
                        <div class="text-muted">@Livro.Autor</div>
                    </div>
                    <div class="table-responsive">
                        <table class="table table-striped table-vcenter mb-0">
                            <tbody>
                                <tr>
                                    <td class="w20"><i class="fa fa-calendar"></i></td>
                                    <td class="tx-medium">Data de Cadastro</td>
                                    <td class="text-right">@Livro.DataCadastro.ToString("dd/MM/yyyy")</td>
                                </tr>
                                <tr>
                                    <td><i class="fa fa-calendar"></i></td>
                                    <td class="tx-medium">Data da Publicação</td>
                                    <td class="text-right">@Livro.DataPublicacao.ToString("dd/MM/yyyy")</td>
                                </tr>
                            </tbody>
                        </table>
                    </div>

                    <div class="card-body d-flex flex-column">
                        <label class="tx-medium">Area de Conhecimento</label>
                        <p class="text-muted">@Livro.AreaConhecimento</p>
                    </div>

                    <div class="card-footer">
                        <div class="d-flex align-items-center mt-auto">
                            <a href="@Url.Action("Alterar", "Livros", new { Id = Livro.LivroId })" class="btn btn-primary btn-sm">Alterar</a>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>